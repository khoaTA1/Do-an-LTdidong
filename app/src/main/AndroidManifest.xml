<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/DoAn_LT_DD"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoAn_LT_DD">
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ReadingComprehensionActivity"/>
        <activity android:name=".activities.DetailActivity" />
        <activity android:name=".activities.WritingActivity" />
        <activity android:name=".activities.SpeakingActivity" />
        <activity android:name=".activities.ConversationActivity" />
        <activity android:name=".activities.ListeningListActivity" />
        <activity android:name=".activities.WishlistActivity" />
        <activity android:name=".activities.FlashcardActivity" />
        <activity 
            android:name=".activities.LessonDetailActivity"
            android:parentActivityName=".activities.ListeningListActivity" />
        <activity 
            android:name=".activities.QuizActivity"
            android:parentActivityName=".activities.LessonDetailActivity" />
        <activity 
            android:name=".activities.ResultActivity"
            android:parentActivityName=".activities.ListeningListActivity" />
        <activity 
            android:name=".activities.FillBlankActivity"
            android:parentActivityName=".activities.LessonDetailActivity" />
        <activity android:name=".activities.RegisterActivity"/>
        <activity android:name=".activities.LoginActivity"/>
        <activity 
            android:name=".activities.ForgotPasswordActivity"
            android:parentActivityName=".activities.LoginActivity"/>
        <activity android:name=".activities.SkillHomeActivity"/>
        <activity android:name=".activities.RCTransActivity"/>
        <activity android:name=".activities.CTTransActivity"/>
        <activity android:name=".activities.ProfileActivity"/>
        <activity android:name=".activities.ReadingSkillResultActivity"/>
        <activity android:name=".activities.ClozeTestActivity"/>
        <activity android:name=".activities.MemoryMatchActivity"/>
        <activity
            android:name=".activities.SettingsActivity"
            android:parentActivityName=".activities.ProfileActivity"/>
        <activity 
            android:name=".activities.HelpActivity"
            android:parentActivityName=".activities.ProfileActivity"/>
        <activity 
            android:name=".activities.AchievementsActivity"
            android:parentActivityName=".activities.ProfileActivity"/>
        <activity android:name=".activities.EntertainmentActivity"/>
        <activity 
            android:name=".activities.StoryAdventureActivity"
            android:parentActivityName=".activities.EntertainmentActivity"/>
        <activity 
            android:name=".activities.StoryDetailActivity"
            android:parentActivityName=".activities.StoryAdventureActivity"/>
        <activity android:name=".activities.ReadingArticleActivity"/>
        <activity android:name=".activities.IntonationActivity"/>
        <activity android:name=".activities.InteractiveTranslationActivity"/>
        <activity android:name=".activities.CrosswordGameActivity"/>
        <activity android:name=".activities.CameraActivity"/>
        <activity android:name=".activities.MemoryMatchStartPageActivity"/>
        <activity 
            android:name=".activities.DailyChallengeActivity"
            android:parentActivityName=".activities.MainActivity"/>
        <activity 
            android:name=".activities.LearningDashboardActivity"
            android:exported="false"
            android:label="Dashboard Học tập"
            android:theme="@style/Theme.DoAn_LT_DD"
            android:parentActivityName=".activities.MainActivity"/>
        
        <!-- AI Tutor Companion Feature -->
        <activity 
            android:name=".activities.AITutorActivity"
            android:exported="false"
            android:label="AI Tutor"
            android:theme="@style/Theme.DoAn_LT_DD"
            android:parentActivityName=".activities.MainActivity"/>
        
        <!-- Personalized Learning Path Feature -->
        <activity 
            android:name=".activities.PersonalizedLearningPathActivity"
            android:exported="false"
            android:label="Learning Path"
            android:theme="@style/Theme.DoAn_LT_DD"
            android:parentActivityName=".activities.MainActivity"/>
        
        <!-- Social Features -->
        <activity 
            android:name=".activities.SocialHubActivity"
            android:exported="false"
            android:label="Social Hub"
            android:theme="@style/Theme.DoAn_LT_DD"
            android:parentActivityName=".activities.MainActivity"/>
        
        <activity 
            android:name=".activities.SearchFriendsActivity"
            android:exported="false"
            android:label="Search Friends"
            android:theme="@style/Theme.DoAn_LT_DD"
            android:parentActivityName=".activities.SocialHubActivity"/>
        
        <!-- Reminder Receiver for notifications -->
        <receiver
            android:name=".services.ReminderReceiver"
            android:enabled="true"
            android:exported="false"/>

    </application>

</manifest>
