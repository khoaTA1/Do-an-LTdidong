<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Styles -->
    <style name="TextAppearance.App.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.App.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="contentPadding">@dimen/spacing_medium</item>
    </style>

    <style name="Widget.App.CardView.Large">
        <item name="cardCornerRadius">@dimen/card_radius_large</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.App.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/button_radius</item>
    </style>

    <style name="Widget.App.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <!-- Skill Card Styles -->
    <style name="SkillCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="SkillCard.Reading">
        <item name="cardBackgroundColor">@color/skill_reading</item>
    </style>

    <style name="SkillCard.Writing">
        <item name="cardBackgroundColor">@color/skill_writing</item>
    </style>

    <style name="SkillCard.Listening">
        <item name="cardBackgroundColor">@color/skill_listening</item>
    </style>

    <style name="SkillCard.Speaking">
        <item name="cardBackgroundColor">@color/skill_speaking</item>
    </style>

    <!-- Difficulty Badge Styles -->
    <style name="DifficultyBadge">
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:paddingTop">@dimen/spacing_tiny</item>
        <item name="android:paddingBottom">@dimen/spacing_tiny</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/primary</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/nav_active</item>
        <item name="itemTextColor">@color/nav_active</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.App.Caption</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.App.Caption</item>
    </style>

    <!-- EditText Style -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/card_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/card_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/card_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/card_radius</item>
    </style>

    <!-- Chip Style -->
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/primary_light</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
</resources>
