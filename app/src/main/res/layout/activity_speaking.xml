<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="#F5F5F5"> <!-- Light background for better contrast -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"/>

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Speaking Practice"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_1"
            android:textAlignment="center"
            android:layout_marginStart="-40dp"/> 
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginBottom="24dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvTargetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello, how are you today?"
                android:textSize="22sp"
                android:textColor="#1E88E5"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnListen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Listen Sample"
                android:drawableStart="@android:drawable/ic_lock_silent_mode_off"
                android:drawablePadding="8dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ivMic"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_speaking"
        android:background="@drawable/bg_circle_ripple" 
        android:padding="16dp"
        android:elevation="6dp"
        android:layout_marginBottom="8dp"/>
        <!-- Note: bg_circle_ripple needs to be defined or use a standard drawable. 
             For now assuming standard selectable item or we can just use standard background -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap mic to speak"
        android:textSize="16sp"
        android:textColor="#757575"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/tvResultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:text="..."
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="#424242"/>

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_weight="1"/>

    <!-- Spacer to push button to bottom if needed, or just margin -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Styled Next Topic Button -->
    <Button
        android:id="@+id/btnNextTopic"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Next Topic"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        android:drawableEnd="@android:drawable/ic_media_next"
        android:paddingStart="32dp"
        android:paddingEnd="24dp"
        android:backgroundTint="#6200EE"
        android:textColor="@android:color/white"
        android:elevation="4dp"
        android:stateListAnimator="@null" 
        android:layout_marginBottom="16dp"/>

</LinearLayout>
