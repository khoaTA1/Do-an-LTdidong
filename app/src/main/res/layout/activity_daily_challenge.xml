<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:title="Daily Challenges"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <!-- Progress Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_radius_large"
                app:cardElevation="@dimen/card_elevation"
                android:layout_marginBottom="@dimen/spacing_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today, Dec 17, 2025"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:text="Daily Progress"
                        android:textSize="@dimen/text_size_title"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ProgressBar
                            android:id="@+id/progress_bar"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_weight="1"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progressTint="@color/success"
                            android:max="100"
                            android:progress="0" />

                        <TextView
                            android:id="@+id/tv_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:text="0/7"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/text_primary"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_xp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:text="0 XP"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/accent"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Challenges List -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="Today's Challenges"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_challenges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- Reward Card (Hidden by default) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                app:cardBackgroundColor="@color/success"
                app:cardCornerRadius="@dimen/card_radius_large"
                app:cardElevation="@dimen/card_elevation"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_reward_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ‰ Congratulations!"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/btn_claim_reward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:text="Claim Reward"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/success" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
