<?xml version="1.0" encoding="utf-8"?>
<!-- Layout cho một item trong RecyclerView - Card của bài học -->
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/card_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Icon/Thumbnail cho bài học -->
        <ImageView
            android:id="@+id/ivLessonImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_lock_silent_mode_off"
            android:contentDescription="@string/lesson_info"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Tiêu đề bài học -->
        <TextView
            android:id="@+id/tvLessonTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Basic Greetings"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivLessonImage"
            app:layout_constraintEnd_toStartOf="@id/chipDifficulty" />

        <!-- Chip hiển thị độ khó -->

        <!-- Mô tả ngắn -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipDifficulty"
            style="@style/Widget.MaterialComponents.Chip.Action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:textSize="12sp"
            app:chipBackgroundColor="@color/difficulty_easy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="EASY" />

        <TextView
            android:id="@+id/tvLessonDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Learn how to greet people in English"
            app:layout_constraintTop_toBottomOf="@id/tvLessonTitle"
            app:layout_constraintStart_toEndOf="@id/ivLessonImage"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/divider"
            app:layout_constraintTop_toBottomOf="@id/ivLessonImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Thông tin bổ sung: Duration và Questions -->
        <LinearLayout
            android:id="@+id/layoutInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layoutProgress">

            <!-- Duration icon và text -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_lock_idle_alarm"
                android:contentDescription="@string/duration"
                app:tint="@color/text_secondary" />

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                tools:text="2:30" />

            <!-- Questions icon và text -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_help"
                android:contentDescription="@string/questions"
                app:tint="@color/text_secondary" />

            <TextView
                android:id="@+id/tvQuestionCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                tools:text="5 questions" />

        </LinearLayout>

        <!-- Tiến độ và điểm số -->
        <LinearLayout
            android:id="@+id/layoutProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            app:layout_constraintTop_toTopOf="@id/layoutInfo"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Status badge -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/info"
                android:visibility="gone"
                tools:text="Completed"
                tools:visibility="visible" />

            <!-- Best score -->
            <TextView
                android:id="@+id/tvBestScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/success"
                android:visibility="gone"
                tools:text="Best: 85%"
                tools:visibility="visible" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
