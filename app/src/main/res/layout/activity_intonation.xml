<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#2196F3"
            app:titleTextColor="@android:color/white">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_arrow_back" 
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Native Voice Converter"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" 
                android:layout_gravity="center"/>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap the mic and say something in English. AI will convert it to a native accent and analyze it."
                android:gravity="center"
                android:textColor="#546E7A"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="48dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnRecord"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="75dp"
                app:cardElevation="8dp"
                app:strokeWidth="4dp"
                app:strokeColor="#E0E0E0"
                app:cardBackgroundColor="#2196F3"
                android:clickable="true"
                android:focusable="true"
                app:rippleColor="#B0BEC5">

                <ImageView
                    android:id="@+id/ivMicIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:scaleType="centerInside"
                    android:padding="40dp"
                    app:tint="@android:color/white" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvRecordStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to Record"
                android:layout_marginTop="24dp"
                android:textColor="#455A64"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/resultCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:contentPadding="20dp"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You said:"
                        android:textSize="14sp"
                        android:textColor="#78909C"/>

                    <TextView
                        android:id="@+id/tvRecognizedText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your recognized speech will appear here..."
                        android:textSize="18sp"
                        android:textColor="#263238"
                        android:layout_marginTop="8dp"
                        android:minHeight="60dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ECEFF1"
                        android:layout_marginVertical="16dp"/>

                    <Button
                        android:id="@+id/btnPlayNative"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Hear Native Version"
                        app:cornerRadius="28dp"
                        android:enabled="false"
                        android:backgroundTint="#4CAF50"/>

                    <Button
                        android:id="@+id/btnAnalyze"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="Analyze Rhythm &amp; Fluency"
                        app:cornerRadius="28dp"
                        android:enabled="false"
                        android:backgroundTint="#FF9800"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>