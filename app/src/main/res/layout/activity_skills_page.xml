<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/reading_skill_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- reading skill -->
            <TextView
                android:id="@+id/title_reading_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reading_skill_homepage_title"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="@color/title_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cardReadingComprehension"
                android:layout_marginTop="40dp"/>

            <!-- Thẻ 1: Đọc hiểu trắc nghiệm -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardReadingComprehension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/secondary"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/title_reading_skill"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/cardClozeTest"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/st_reading_skill_mode_label"
                        android:textAlignment="center"
                        android:textSize="30sp"
                        android:textColor="@color/text_2"
                        android:padding="16dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Thẻ 2: Cloze Test -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardClozeTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:layout_constraintTop_toBottomOf="@id/cardReadingComprehension"
                app:layout_constraintStart_toEndOf="@id/title_reading_skill"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cardBackgroundColor="@color/secondary"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nd_reading_skill_mode_label"
                        android:textAlignment="center"
                        android:textSize="30sp"
                        android:textColor="@color/text_2"
                        android:padding="16dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- speaking skill -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/speaking_skill_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/reading_skill_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="50dp">

        <TextView
            android:id="@+id/title_reading_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/speaking_skill_homepage_title"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/title_1"
            app:layout_constraintTop_toBottomOf="@id/reading_skill_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- writing skill -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/writing_skill_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/speaking_skill_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/title_writing_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/writing_skill_homepage_title"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/title_1"
            app:layout_constraintTop_toBottomOf="@id/reading_skill_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- layout khi user chưa đăng nhập -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/login_require_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="100dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/login_required"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn chưa đăng nhập?"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/login_redirect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập ngay"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/login_required"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>