<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".activities.ClozeTestActivity">

    <!-- Thanh tiêu đề với gradient -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layoutTopBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_primary"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/back_arrow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@android:color/white"
                    android:contentDescription="Back"/>

                <TextView
                    android:id="@+id/ClozeTestTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cloze_test_practice_title"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/practice_process"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="1"/>

                <TextView
                    android:id="@+id/total_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card chứa câu hỏi -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/questionsCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@id/layoutBottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutTopBar">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Câu 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/index_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1. "
                                android:textColor="#667eea"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/cloze_question_1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#2C3E50"
                                android:textSize="16sp"
                                android:lineSpacingExtra="4dp"
                                tools:text="You shouldn't have ________ to me. (lay/laid/lain/lied)"/>
                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:boxStrokeColor="#667eea"
                            app:hintTextColor="#667eea">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/cloze_answer_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Điền đáp án"
                                android:textSize="16sp"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Câu 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/index_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2. "
                                android:textColor="#667eea"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/cloze_question_2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#2C3E50"
                                android:textSize="16sp"
                                android:lineSpacingExtra="4dp"
                                tools:text="If you like him, ________! (hit it off/stand him up/ask him out/take him on)"/>
                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:boxStrokeColor="#667eea"
                            app:hintTextColor="#667eea">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/cloze_answer_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Điền đáp án"
                                android:textSize="16sp"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Câu 3 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/index_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3. "
                                android:textColor="#667eea"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/cloze_question_3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#2C3E50"
                                android:textSize="16sp"
                                android:lineSpacingExtra="4dp"
                                tools:text="This movie is 4 hours long. This is the ________ movie I have ever seen."/>
                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:boxStrokeColor="#667eea"
                            app:hintTextColor="#667eea">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/cloze_answer_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Điền đáp án"
                                android:textSize="16sp"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Câu 4 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/index_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4. "
                                android:textColor="#667eea"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/cloze_question_4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#2C3E50"
                                android:textSize="16sp"
                                android:lineSpacingExtra="4dp"
                                tools:text="I managed to download the file ________."/>
                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:boxStrokeColor="#667eea"
                            app:hintTextColor="#667eea">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/cloze_answer_4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Điền đáp án"
                                android:textSize="16sp"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

    <!-- Thanh điều hướng dưới -->
    <LinearLayout
        android:id="@+id/layoutBottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/submit_btn_label"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#4CAF50"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_check"
            app:iconGravity="textStart"
            app:iconSize="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/next_btn_label"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#2196F3"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_arrow_forward"
            app:iconGravity="end"
            app:iconSize="20dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>