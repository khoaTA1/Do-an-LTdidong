<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Summary Test"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_streak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Streak Test"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_total_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time Test"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_weak_skills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weak Skills Test"
        android:textSize="16sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recommendations"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <Button
        android:id="@+id/btn_sync_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sync"/>

    <Button
        android:id="@+id/btn_generate_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate"/>

    <Button
        android:id="@+id/btn_test_lesson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</LinearLayout>
